<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
    <addon id="repository.pov.hebrew.wizard" name="POV Hebrew Wizard Repository" version="1.0.0" provider-name="KODI-RD-IL">
        <extension point="xbmc.addon.repository" name="POV Hebrew Wizard Repository">
            <info compressed="false">https://asaf27064.github.io/zips/addons.xml</info>
            <checksum>https://asaf27064.github.io/zips/addons.xml.md5</checksum>
            <datadir zip="true">https://asaf27064.github.io/zips</datadir>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary lang="en_GB">POV Hebrew Wizard Repository</summary>
            <summary lang="he_IL">ריפו של אשף הכתוביות העבריות</summary>
            <description lang="en_GB">Repository for POV Hebrew Subtitles Wizard</description>
            <description lang="he_IL">ריפו לאשף הכתוביות העבריות</description>
            <platform>all</platform>
        </extension>
    </addon>
    <addon id="plugin.program.pov.hebrew.wizard" name="POV Hebrew Subtitles Wizard" version="1.0.1" provider-name="KODI-RD-IL">
        <requires>
            <import addon="xbmc.python" version="3.0.0"/>
            <import addon="script.module.requests"/>
        </requires>
        <extension point="xbmc.python.pluginsource" library="default.py">
            <provides>executable</provides>
        </extension>
        <extension point="xbmc.service" library="service.py" start="startup"/>
        <extension point="xbmc.addon.metadata">
            <summary lang="en_GB">Hebrew Subtitles Integration for POV, FenLight &amp; Arctic Fuse</summary>
            <summary lang="he_IL">אינטגרציית כתוביות עבריות ל-POV, FenLight וסקין Arctic Fuse</summary>
            <description lang="en_GB">Automatically installs and updates Hebrew subtitle matching feature for POV and FenLight addons. Also supports Hebrew files for Arctic Fuse skin. Auto re-installs after addon updates.</description>
            <description lang="he_IL">מתקין ומעדכן אוטומטית את תכונת התאמת הכתוביות העבריות לתוספי POV ו-FenLight. תומך גם בקבצי עברית לסקין Arctic Fuse. מתקין מחדש אוטומטית אחרי עדכוני תוספים.</description>
            <platform>all</platform>
            <license>GPL-3.0</license>
        </extension>
    </addon>
</addons>
