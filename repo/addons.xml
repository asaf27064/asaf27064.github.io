<?xml version="1.0" encoding="UTF-8"?>
<addons>
    <addon id="repository.masterkodi.il" name="MasterKodi IL Repository" version="1.0.0" provider-name="MasterKodi IL">
        <extension point="xbmc.addon.repository" name="MasterKodi IL Repository">
            <dir>
                <info compressed="false">https://asaf27064.github.io/repo/addons.xml</info>
                <checksum>https://asaf27064.github.io/repo/addons.xml.md5</checksum>
                <datadir zip="true">https://asaf27064.github.io/repo</datadir>
            </dir>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary lang="en">MasterKodi IL Repository</summary>
            <summary lang="he">רפוזיטורי MasterKodi IL</summary>
            <platform>all</platform>
        </extension>
    </addon>
    <addon id="plugin.program.masterkodi.il.wizard" name="MasterKodi IL Wizard" version="1.8.1" provider-name="MasterKodi IL">
        <requires>
            <import addon="xbmc.python" version="3.0.0"/>
        </requires>
        <extension point="xbmc.python.pluginsource" library="default.py">
            <provides>executable</provides>
        </extension>
        <extension point="xbmc.service" library="service.py" start="startup"/>
        <extension point="xbmc.addon.metadata">
            <summary lang="en">MasterKodi IL Wizard</summary>
            <summary lang="he">אשף MasterKodi IL</summary>
            <description lang="en">Hebrew support for POV, FenLight, Arctic Fuse. Build installation and maintenance tools.</description>
            <description lang="he">תמיכה בעברית ל-POV, FenLight, Arctic Fuse. התקנת בילדים וכלי תחזוקה.</description>
            <platform>all</platform>
        </extension>
    </addon>
</addons>
